<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txt_hello"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello Friends,"
            android:textSize="45dp"
            android:fontFamily="@font/gilroybold"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/txt_join"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join us to make a better world."
            android:textSize="15dp"
            android:fontFamily="@font/gilroylight"
            android:textColor="@color/colorGrey"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/btn_signupwithgoogle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/radius_small_button_white"
            android:clickable="true"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="5dp"
            android:layout_marginVertical="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/google"
                    android:layout_marginRight="10dp"/>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"
                    android:textSize="20dp"
                    android:fontFamily="@font/gilroylight"
                    android:text="Sign Up with Google " />

            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/txt_or"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="- OR -"
            android:textSize="15dp"
            android:fontFamily="@font/gilroylight"
            android:textColor="@color/colorGrey"
            android:layout_marginBottom="25dp"/>
        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="15dp"
            android:fontFamily="@font/gilroylight"
        android:textColor="@color/colorGrey"
        />
        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:fontFamily="@font/gilroylight"
            android:textSize="15dp"
            android:textColor="@color/colorGrey"
            />
        <EditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:fontFamily="@font/gilroylight"
            android:textSize="15dp"
            android:textColor="@color/colorGrey"
            />
        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gilroylight"
            android:text="Retype - Password"
            android:textSize="15dp"
            android:textColor="@color/colorGrey"
            />
        <EditText
            android:id="@+id/edt_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/chk_privacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="By creating account. you agree to accept our Privacy Policy, Term of Service and Notifications Setting."
                android:textSize="15dp"
                android:fontFamily="@font/gilroylight"
                android:paddingBottom="10dp"
                android:justificationMode="inter_word"
                android:textColor="@color/colorGrey"
                />
        </LinearLayout>

            <Button
                android:id="@+id/btn_createAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:layout_marginLeft="30dp"
                android:textColor="#fff"
                style="@style/ButtonSignINUP"
                android:background="@drawable/radius_button_black"
                android:layout_gravity="right"
                android:fontFamily="@font/gilroylight"
                android:paddingHorizontal="65dp"
                android:layout_marginTop="25dp"
                />

        </LinearLayout>

</RelativeLayout>