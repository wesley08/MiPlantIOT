<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="28dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_centerInParent="true"
            android:id="@+id/img_image_cart"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/catus"/>
        <TextView
            android:id="@+id/txt_remove_item_cart"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="X"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:gravity="center"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:layout_marginLeft="18dp">
        <TextView
            android:id="@+id/txt_cart_cateogry_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing"
            android:textSize="13dp"
            android:fontFamily="@font/gilroybold"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/txt_cart_name_of_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing"
            android:textSize="20dp"
            android:fontFamily="@font/gilroybold"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/txt_cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="testing"
            android:textSize="16dp"
            android:fontFamily="@font/gilroybold"
            android:textColor="@color/colorGrey"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right|bottom">
            <TextView
                android:id="@+id/txt_cart_minus_item"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:textColor="@color/colorGrey"
                android:gravity="center"
                android:fontFamily="@font/gilroybold"
                android:background="@drawable/radius_button_greenec"
                android:layout_marginRight="10dp"
                android:text="-"/>
            <EditText
                android:id="@+id/edt_cart_number_of_item"
                android:gravity="center"
                android:inputType="number"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:background="@null"

                />
            <TextView
                android:id="@+id/txt_cart_plus_item"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:textColor="@color/colorGrey"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/gilroybold"
                android:background="@drawable/radius_button_greenc7"
                android:text="+"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>