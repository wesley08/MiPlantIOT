<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="33dp">
        <TextView
            android:id="@+id/txt_yourcart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Cart"
            android:fontFamily="@font/gilroybold"
            android:textSize="30dp"
            android:textColor="@color/colorBlack"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/txt_amount_of_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Items"
            android:textSize="16dp"
            android:fontFamily="@font/gilroylight"
            android:textColor="@color/colorGrey"
            android:layout_below="@id/txt_yourcart"
            android:layout_marginBottom="25dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_cart"
            android:layout_width="match_parent"
            android:layout_height="468dp"
            android:layout_below="@id/txt_amount_of_items"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_cart"
            android:layout_marginBottom="10dp"/>

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/recyclerview_cart"
            android:stretchColumns="1"
            android:id="@+id/table_totals_price_of_items">

            <TableRow>
                <TextView
                    android:fontFamily="@font/gilroybold"
                    android:text="Totals "
                    android:padding="3dip"
                    android:textSize="20dp"
                    />
                <TextView
                    android:id="@+id/txt_amount_of_totals"
                    android:text="RP"
                    android:gravity="right"
                    android:fontFamily="@font/gilroybold"
                    android:textSize="20dp"
                    android:padding="3dip" />
            </TableRow>
        </TableLayout>
        <Button
            android:id="@+id/btn_check_out"
            android:layout_width="180dp"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"
            android:text="Check out"
            android:layout_gravity="right"
            android:background="@drawable/radius_button_green8c"
            android:layout_below="@id/table_totals_price_of_items"
            android:layout_alignParentRight="true"/>


    </LinearLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:src="@drawable/right_image_wave" />
        <ImageView
            android:layout_width="104dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            android:alpha="0.4"
            android:src="@drawable/tree" />
    </FrameLayout>
</RelativeLayout>