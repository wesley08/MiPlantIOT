<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_button_white_without_line"
    android:layout_margin="10dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_no_transaction_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11453473892"
            android:fontFamily="@font/gilroybold"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_history_status_admin"
                android:layout_width="150dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="Paid"
                android:fontFamily="@font/gilroylight"
                android:textSize="15dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/label_paid_or_unpaid"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Totals"
            android:fontFamily="@font/gilroybold"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/txt_totals_amount_history_admin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11453473892"
            android:fontFamily="@font/gilroybold"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:gravity="right|bottom">
        <TextView
            android:id="@+id/txt_unpaid_item_admin"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="UNPAID"
            android:textColor="@color/colorWhite"
            android:background="@color/colorGrey"
            android:gravity="center"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/txt_paid_item_admin"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="PAID"
            android:textColor="@color/colorWhite"
            android:background="@color/colorWarning"
            android:gravity="center"
            />
    </LinearLayout>
</LinearLayout>