<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_button_white_without_line"
    android:layout_margin="10dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/txt_no_transaction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11453473892"
            android:fontFamily="@font/gilroybold"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/colorBlack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_history_status"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:text="Paid"
            android:fontFamily="@font/gilroylight"
            android:textSize="15dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/label_paid_or_unpaid"
            />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BCA Account : Wesley 15322591"
        android:fontFamily="@font/gilroymedium"
        android:textSize="10dp"
        android:textColor="@color/colorBlack"
        android:layout_marginVertical="3dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="match_parent"
            android:text="Date Check Out"
            android:fontFamily="@font/gilroybold"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_date_transaction"
                android:layout_width="120dp"
                android:layout_height="18dp"
                android:gravity="center"
                android:layout_gravity="right"
                android:text="20-08-2020"
                android:fontFamily="@font/gilroylight"
                android:textSize="10dp"
                android:textColor="@color/colorBlack"
                />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorBlack" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_history_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/item_detail_history"
        android:layout_marginHorizontal="15dp"
         />

    <View
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:gravity="right">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Totals"
            android:fontFamily="@font/gilroybold"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            />
        <TextView
            android:id="@+id/txt_totals_amount_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11453473892"
            android:fontFamily="@font/gilroybold"
            android:textSize="13dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/colorBlack"
            />
    </LinearLayout>


    <TextView
        android:id="@+id/txt_already_pay"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center"
        android:layout_gravity="right"
        android:text="Already Paid"
        android:fontFamily="@font/gilroylight"
        android:textSize="15dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/radius_button_already_pay"
        />
</LinearLayout>